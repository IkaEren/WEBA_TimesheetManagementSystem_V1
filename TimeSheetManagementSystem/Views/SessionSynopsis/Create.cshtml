@using Microsoft.AspNetCore.Identity
@using TimeSheetManagementSystem.Models
@using System.Security.Claims 
@model TimeSheetManagementSystem.Models.SessionSynopsis

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>New Session Synopsis</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="SessionSynopsisName" class="col-md-2 control-label">Synopsis Name</label>
            <div class="col-md-10">
                <input asp-for="SessionSynopsisName" class="form-control" />
                <span asp-validation-for="SessionSynopsisName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="IsVisible" class="col-md-2 control-label">Visiblity</label>
                <div class="col-md-10">
                    <input type="checkbox" asp-for="IsVisible" name="test"/>
                </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a role="button" class="btn btn-primary" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $('[id="IsVisible"]').bootstrapSwitch();
    </script>
}
