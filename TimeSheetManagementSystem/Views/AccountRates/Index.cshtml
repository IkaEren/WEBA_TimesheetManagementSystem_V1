@model IEnumerable<TimeSheetManagementSystem.Models.AccountRate>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a class="btn btn-success pull-right" role="button" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.RatePerHour)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EffectiveStartDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EffectiveEndDate)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerAccount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RatePerHour)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EffectiveStartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EffectiveEndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerAccount.AccountName)
            </td>
            <td>
                <a class="btn btn-warning pull-right" role="button" asp-action="Edit" asp-route-id="@item.AccountRateId">Edit</a>
                <a class="btn btn-info pull-right" role="button" asp-action="Details" asp-route-id="@item.AccountRateId">Details</a>
                <a class="btn btn-danger pull-right" role="button" asp-action="Delete" asp-route-id="@item.AccountRateId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

@section scripts{
    <script>
        $(document).ready(function () {
            // Can't use Null because the tempdata will be an empty string when it's not initialized.'
            if ('@(TempData["Success"])' !== "") {
                var message = '@TempData["Success"]'
                new Noty({
                    text: message,
                    theme: 'metroui',
                    type: 'success',
                    timeout: 5000
                }).show();
            }
        });
    </script>
}